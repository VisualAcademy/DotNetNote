@using DotNetNote.Models
@model Attendee

@{
    ViewData["Title"] = "참석 등록하기";
}

<h2>등록하기</h2>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}


<div class="row">
    <div class="col-md-6">


        <form asp-controller="Attendee" asp-action="Create" method="post"
              class="form-horizontal">

            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label asp-for="UID" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="UID" class="form-control" placeholder="UID">
                    <span asp-validation-for="UID" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="UserId" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="UserId" class="form-control" placeholder="UserId">
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit"
                            class="btn btn-primary btn-lg">
                        등록
                    </button>
                    <a asp-controller="Attendee" asp-action="Index"
                       class="btn btn-default btn-sm">취소</a>
                </div>
            </div>

        </form>


    </div>
</div>
