@model List<Hero>

<h1>캐릭터 선택</h1>

@if (ViewBag.MyCharacter != null)
{
    <text>이미 선택한 캐릭터 번호:</text> @ViewBag.MyCharacter.HeroId
}

<hr />
<form action="/Character/Choice" method="post">

    <input type="submit" name="name" value="선택 완료" class="btn btn-primary btn-lg" />
    <hr />

    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <label><input type="radio" name="hero" value="1" checked /> (샘플) 홍길동</label>
                </div>
                <div class="panel-body text-center">
                    <img src="~/images/dummy_people.png" />
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <label><input type="radio" name="hero" value="2" /> (샘플) 백두산</label>
                </div>
                <div class="panel-body text-center">
                    <img src="~/images/dummy_people.png" />
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <label><input type="radio" name="hero" value="3" /> (샘플) 임꺽정</label>
                </div>
                <div class="panel-body text-center">
                    <img src="~/images/dummy_people.png" />
                </div>
            </div>
        </div>
    </div>

    <hr />

    <div class="row">
        @foreach (var hero in Model)
        {
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <label><input type="radio" name="hero" value="@hero.Id" /> @hero.Name - @hero.Icon</label>
                    </div>
                    <div class="panel-body text-center">
                        <img src="~/images/dummy_people.png" />
                    </div>
                </div>
            </div>
        }
    </div>

</form>
