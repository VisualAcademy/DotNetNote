@{
    Layout = null;
}

@model Hero

<h1>영웅 캐릭터 생성</h1>

<form class="form-horizontal" role="form" action="/Hero/Create" method="post">
    <div class="form-group">
        <label class="col-sm-2 control-label" for="name">이름</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="name" name="name" placeholder="이름">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" for="icon">캐릭터 아이콘</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="icon" name="icon" placeholder="캐릭터 아이콘">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">저장</button>
            <a href="/Hero/Index">취소</a>
        </div>
    </div>
</form>
