        "PortalConnection": "Server=(localdb)\\mssqllocaldb;Database=DotNetNote;Trusted_Connection=True;",
        "NoticeApp": "Server=(localdb)\\mssqllocaldb;Database=Notices;Trusted_Connection=True;",
