@model DotNetNote.Models.TextMessageViewModel

<div class="add-text-message">
    <h2>Add a Text Message</h2>

    <form asp-controller="TextMessage" asp-action="AddMessage">
        <div class="form-group">
            <label for="message">Message:</label>
            <input type="text" id="message" name="message" class="form-control" />
        </div>

        <div class="form-group">
            <label for="recipient">Recipient:</label>
            <input type="text" id="recipient" name="recipient" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Send</button>
    </form>
</div>
