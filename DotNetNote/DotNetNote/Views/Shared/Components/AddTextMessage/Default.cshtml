<div class="add-text-message">
    <h2>Add a Text Message</h2>

    <div class="form-group">
        <label for="message">Message:</label>
        <input type="text" id="message" name="message" class="form-control" placeholder="Enter your message here" />
    </div>

    <div class="form-group">
        <label for="recipient">Recipient:</label>
        <input type="text" id="recipient" name="recipient" class="form-control" placeholder="Enter recipient" />
    </div>

    <button type="button" class="btn btn-primary" disabled>Send</button>
</div>
