@model RecruitSetting

<h2>모집 상세 보기 - @ViewData["Id"]</h2>

<a href="/RecruitManager/RecruitSettingList" class="btn btn-primary">
    모집 설정 리스트
</a>

<form asp-controller="RecruitManager"
      asp-action="RecruitSettingEditOrDelete"
      method="post"
      class="form-horizontal"
      role="form">

    <div class="form-group">
        <label class="col-sm-2 control-label"
               asp-for="BoardName"></label>
        <div class="col-sm-10">
            <input asp-for="BoardName" class="form-control" />
            <span asp-validation-for="BoardName" class="text-danger"></span>
        </div>
    </div>

    <input type="hidden" asp-for="Id" value="@Model.Id" />

    <div class="form-group">
        <label class="col-sm-2 control-label"
               asp-for="BoardNum"></label>
        <div class="col-sm-10">
            <input asp-for="BoardNum" class="form-control" />
            <span asp-validation-for="BoardNum" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label"
               asp-for="BoardTitle"></label>
        <div class="col-sm-10">
            <input asp-for="BoardTitle" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label"
               asp-for="BoardContent"></label>
        <div class="col-sm-10">
            <textarea asp-for="BoardContent" class="form-control">                
            </textarea>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label"
               asp-for="StartDate"></label>
        <div class="col-sm-10">
            <input asp-for="StartDate" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label"
               asp-for="EventDate"></label>
        <div class="col-sm-10">
            <input asp-for="EventDate" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label"
               asp-for="EndDate"></label>
        <div class="col-sm-10">
            <input asp-for="EndDate" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label"
               asp-for="MaxCount"></label>
        <div class="col-sm-10">
            <input asp-for="MaxCount" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label"
               asp-for="Remarks"></label>
        <div class="col-sm-10">
            <input asp-for="Remarks" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary btn-lg"
                    id="btnUpdate"
                    name="action" value="update">
                수정
            </button>
            <button type="submit" class="btn btn-danger btn-sm"
                    name="action" value="delete"
                    onclick="return confirm('삭제하시겠습니까?');"
                    >
                삭제
            </button>
        </div>
    </div>
</form>

@section scripts {
    <script>
        $(function() {
            $('#btnUpdate').click(function() {
                return confirm('수정하시겠습니까?');
            });
        });
    </script>
}
